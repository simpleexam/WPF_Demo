<Window x:Class="WPF_Demo.UnuformGridDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Demo"
        mc:Ignorable="d"
        Title="UnuformGridDemo" Height="450" Width="800">
    <UniformGrid Columns="3">
        <Rectangle Fill="Aquamarine"/>
        <Rectangle Fill="CadetBlue"/>
        <Rectangle Fill="DarkGoldenrod"/>

        <Button Name="OpenMainWindowButton" 
                Click="OpenMainWindowButton_Click"
                Content="Открыть главное окно"/>

        <Rectangle Fill="Black"/>
        <Rectangle Fill="Aquamarine"/>
        <Rectangle Fill="Chocolate"/>
        
    </UniformGrid>
</Window>
